<odoo>
    <record id="view_evaluation_form" model="ir.ui.view">
        <field name="name">employee.evaluation.form</field>
        <field name="model">employee.evaluation</field>
        <field name="arch" type="xml">
            <form string="Employee Evaluation">
                <group>
                    <field name="employee_id"/>
                    <field name="project_id"/>
                    <field name="performance_score"/>
                </group>
                <field name="task_ids">
                    <tree>
                        <field name="name"/>
                        <field name="state"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
</odoo>
